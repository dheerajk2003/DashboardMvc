@* <partial name="_NotificationAlert" /> *@

<div class="row">
    <div class="col-sm-12">
        <form class="md-float-material form-material" enctype="multipart/form-data" asp-action="AddClient" asp-controller="Home" asp-area="Admin" method="post">

            <div class="auth-box card">
                <div class="card-block">
                    <div class="row m-b-20">
                        <div class="col-md-12">
                            <h3 class="text-center txt-primary">Add New Client</h3>
                        </div>
                    </div>
                    <div class="form-group form-primary">
                        <input type="text" asp-for=ClientName name="ClientName" class="form-control" required="">
                        <span class="form-bar"></span>
                        <label class="float-label">Client Name</label>
                    </div>
                    <div class="form-group form-primary">
                        <input type="text" asp-for=ClientEmail name="ClientEmail" class="form-control" required="">
                        <span class="form-bar"></span>
                        <label class="float-label">Your Email Address</label>
                    </div>

@*                     <div class="form-group form-primary">
                        <input type="password" asp-for=ClientPassword name="ClientPassword" class="form-control" required="">
                        <span class="form-bar"></span>
                        <label class="float-label">Password</label>
                    </div> *@
                    <div class="form-group primary">
                        <textarea name="ClientAddress" asp-for=ClientAddress class="form-control" required="" rows="5" cols="5"></textarea>
                        <span class="form-bar"></span>
                        <label class="float-label">Address</label>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group form-primary">
                                <input type="text" asp-for=ClientContact name="ClientContact" class="form-control" required="">
                                <span class="form-bar"></span>
                                <label class="float-label">Contact</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-primary">
                                <input type="text" asp-for=ClientContactA name="ClientContactA" class="form-control" required="">
                                <span class="form-bar"></span>
                                <label class="float-label">Alternate</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group primary">
                        <input type="file" asp-for=ClientLogo class="form-control" required="" />
                        <span class="form-bar"></span>
                        @* <label class="float-label">Select Logo</label> *@
                    </div>
                    <div class="row m-t-30">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">ADD CLIENT</button>
                        </div>
                    </div>
                    <hr />
